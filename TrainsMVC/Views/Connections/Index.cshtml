@model IEnumerable<BusinessLayer.Connection>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TerrainType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NodeA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NodeB)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TerrainType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NodeA.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NodeB.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
