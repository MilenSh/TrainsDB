@model BusinessLayer.Locomotive
@using BusinessLayer;

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Locomotive</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nickname" class="control-label"></label>
                <input asp-for="Nickname" class="form-control" />
                <span asp-validation-for="Nickname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarryingCapacity" class="control-label"></label>
                <input asp-for="CarryingCapacity" class="form-control" />
                <span asp-validation-for="CarryingCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocomotiveType" class="control-label"></label>
                @Html.DropDownListFor(
                    connection => connection.LocomotiveType,
                    Html.GetEnumSelectList<LocomotiveType>(),
                    new { @class = "form-control" })
                <span asp-validation-for="LocomotiveType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationId" class="control-label"></label>
                <select asp-for="LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainCompositionId" class="control-label"></label>
                <select asp-for="TrainCompositionId" class="form-control" asp-items="ViewBag.TrainCompositionId"></select>
                <span asp-validation-for="TrainCompositionId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
